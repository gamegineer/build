<project name="ant-macros">

    <macrodef name="antWithJVM">
        <attribute name="buildDir" />
        <attribute name="buildFile" default="build.xml" />
        <attribute name="javaHome" default="${java.home}" />
        <attribute name="targets" default="" />
        <sequential>
            <java
                    classname="org.apache.tools.ant.launch.Launcher"
                    dir="@{buildDir}"
                    failonerror="true"
                    fork="true"
                    jvm="@{javaHome}/bin/java"
                    taskname="ant">
                <classpath>
                    <pathelement location="${ant.home}/lib/ant-launcher.jar" />
                </classpath>
                <arg value="-buildfile" />
                <arg file="@{buildDir}/@{buildFile}" />
                <arg line="@{targets}" />
            </java>
        </sequential>
    </macrodef>

</project>
